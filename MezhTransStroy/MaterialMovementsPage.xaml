<Page x:Class="MezhTransStroy.MaterialMovementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialMovementsPage">

    <Grid>
        <Button Content="Очистить данные"
          Width="200" Height="40" Margin="10"
          HorizontalAlignment="Right"
          VerticalAlignment="Top"
          Background="Honeydew"
          FontWeight="Bold"
          Click="ClearNotifications_Click"/>
        <TextBlock Text="Список движений материалов:" FontSize="24" FontWeight="Bold" Margin="10,40,0,0" HorizontalAlignment="Center"/>
        <ScrollViewer Margin="55,90,50,0" Height="Auto" MaxHeight="300" MinHeight="50" VerticalAlignment="Top">
            <ListBox x:Name="NotificationList" Height="Auto" VerticalAlignment="Top"/>
        </ScrollViewer>
    </Grid>
</Page>
