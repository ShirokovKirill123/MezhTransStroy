<Page x:Class="MezhTransStroy.MaterialMovementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialMovementsPage">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Button Content="Очистить данные"
                Style="{StaticResource RoundedButtonStyle}"
                Background="Tomato"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="ClearNotifications_Click"/>

        <TextBlock Text="Список движений ресурсов:"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10,40,0,0"
                   HorizontalAlignment="Center"/>

        <Border Margin="55,99,50,0"
                CornerRadius="10"
                BorderBrush="#4CAF50"
                BorderThickness="1"
                Background="White"
                VerticalAlignment="Top"
                MaxHeight="300"
                MinHeight="50">
            <ScrollViewer>
                <ListBox x:Name="NotificationList"
                         VerticalAlignment="Top"
                         Background="Transparent"
                         BorderThickness="0"/>
            </ScrollViewer>
        </Border>

        <Button Content="Экспорт в документ"
                Style="{StaticResource RoundedButtonStyle}"
                Background="LightBlue"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ExportToWord_Click"/>
    </Grid>
</Page>

