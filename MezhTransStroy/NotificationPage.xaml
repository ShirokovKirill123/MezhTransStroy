<Page x:Class="MezhTransStroy.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificationPage">

    <Grid>
        <Button Content="Очистить уведомления"
        Width="200" Height="40" Margin="10"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Background="Honeydew"
        FontWeight="Bold"
        Click="ClearNotifications_Click"/>
        <TextBlock Text="Список уведомлений:" FontSize="24" FontWeight="Bold" Margin="10,40,0,0" HorizontalAlignment="Center"/>
        <ScrollViewer Margin="55,90,50,0" Height="Auto" MaxHeight="300" MinHeight="50" VerticalAlignment="Top">
            <ListBox x:Name="NotificationList" Height="Auto" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Button Content="Перенаправить материалы со склада на объекты"
          Width="310" Height="30" Margin="12"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="Honeydew"
          FontWeight="Bold"
          Click="RedirectMaterials_Click"/>
    </Grid>
</Page>
