<Page x:Class="MezhTransStroy.ApplicationsFromAConstructionSitePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1200"
      Title="ApplicationsFromAConstructionSitePage">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <TextBlock Text="Список заявок:"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,82,0,0"
                   HorizontalAlignment="Center"/>

        <Border Margin="55,140,50,0"
        CornerRadius="10"
        BorderBrush="#4CAF50"
        BorderThickness="1"
        Background="White"
        VerticalAlignment="Top"
        MaxHeight="300"
        MinHeight="50">
            <ScrollViewer Margin="9,0,9,0"
                      Height="Auto"
                      MaxHeight="300"
                      MinHeight="50"
                      VerticalAlignment="Center"
                      Background="White"
                      BorderBrush="#4CAF50"
                      BorderThickness="1"
                      >
                <ListBox x:Name="ApplicationsList"
                     Height="Auto"
                     VerticalAlignment="Top"
                     SelectionMode="Single"
                     BorderThickness="0"/>
            </ScrollViewer>
        </Border>
        <Button 
                Width="191"
                Height="54"
                Margin="0,15,50,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Tomato"
                Style="{StaticResource RoundedButtonStyle}"
                Click="ClearSelectedNotification_Click">
            <TextBlock TextAlignment="Center">
                Очистить 
                <LineBreak/>
                выбранную заявку
            </TextBlock>
        </Button>
    </Grid>
</Page>