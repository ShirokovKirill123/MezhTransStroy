<Page x:Class="MezhTransStroy.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid Margin="10">
        <GroupBox Header="Выбор отчёта" HorizontalAlignment="Left" VerticalAlignment="Top" Width="292" Height="108" Margin="70,20,0,0" Background="Beige ">
            <ComboBox x:Name="ReportsComboBox" Height="30" SelectionChanged="ReportsComboBox_SelectionChanged" Background="#ADD8E6" Margin="0,0,-2,0">

                <!-- Пекарь -->
                <ComboBoxItem Content="Отчёт о произведённой продукции" />
                <ComboBoxItem Content="Отчёт о нехватке ингредиентов" />
                <ComboBoxItem Content="Отчёт о заказанных продуктах" />

                <!-- Менеджер по закупкам -->
                <ComboBoxItem Content="Отчёт о необходимых закупках" />
                <ComboBoxItem Content="Отчёт о поставках по ингредиентам" />
                <ComboBoxItem Content="Отчёт о поступлении и расходе ингредиентов" />
                <ComboBoxItem Content="Отчёт о состоянии запасов" />

                <!-- Администратор -->
                <ComboBoxItem Content="Отчёт о прибыли" />
            </ComboBox>
        </GroupBox>

        <GroupBox Header="Данные отчёта" Margin="70,150,10,50" Background="Beige ">
            <DataGrid x:Name="ReportsDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  ColumnWidth="*" >
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </GroupBox>

        <Button x:Name="ExportButton" Content="Экспортировать" HorizontalAlignment="Right" VerticalAlignment="Top" Width="180" Height="50" Margin="0,50,54,10" FontFamily="Yu Gothic UI Semibold" FontSize="12" Background="Beige " Click="ExportButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
