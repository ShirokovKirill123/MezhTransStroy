<Page x:Class="MezhTransStroy.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MezhTransStroy"
      mc:Ignorable="d" 
       d:DesignHeight="1000" d:DesignWidth="1500"
      Title="NotificationPage">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>

        <Button 
                Style="{StaticResource RoundedButtonStyle}"
                Width="191" Height="70"
                Margin="24,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Khaki"
                Click="RedirectMaterials_Click">
            <TextBlock TextAlignment="Center">
             Перенаправить все 
             <LineBreak/>
             материалы 
            <LineBreak/>
            со склада на объекты
            </TextBlock>
        </Button>

        <Button 
                Style="{StaticResource RoundedButtonStyle}"
                Width="200" Height="70"
                Margin="240,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="LightGreen"
                Click="RedirectSelectedNotification_Click">
            <TextBlock TextAlignment="Center">
             Перенаправить только 
             <LineBreak/>
              выбранный материал
            <LineBreak/>
              на объект
            </TextBlock>
        </Button>

        <Button 
                Style="{StaticResource RoundedButtonStyle}"
                Width="191" Height="70"
                Margin="930,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="MediumAquamarine"
                Click="RedirectedMaterials_Click">
            <TextBlock TextAlignment="Center">
             Перенаправленные  
             <LineBreak/>
              материалы на объекты
            </TextBlock>    
        </Button>

        <Button Content="Очистить все уведомления"
                Style="{StaticResource RoundedButtonStyle}"
                Width="191" Height="54"
                Margin="1150,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Tomato"
                Click="ClearNotifications_Click"/>

        <Button Width="191" Height="54"
                Margin="1150,80,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Tomato"
                Style="{StaticResource RoundedButtonStyle}"
                Click="ClearSelectedNotification_Click">
            <TextBlock TextAlignment="Center">
                Очистить
                <LineBreak/>
                выбранное уведомление
            </TextBlock>
        </Button>

        <TextBlock Text="Список уведомлений:"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10,120,0,0"
                   HorizontalAlignment="Center"/>

        <GroupBox Header="Уведомления"
                  Margin="55,170,50,30"
                  Background="Beige"
                  BorderBrush="#4CAF50"
                  BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Background="White">
                <ListBox x:Name="NotificationList"
                         BorderThickness="0"
                         Background="White"
                         SelectionMode="Single"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Page>
